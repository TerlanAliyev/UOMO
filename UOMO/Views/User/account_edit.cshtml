
@model User
<main>
    <div class="mb-4 pb-4"></div>
    <section class="my-account container">
        <h2 class="page-title">Account Details</h2>
        <div class="row">
            <div class="col-lg-3">
                <ul class="account-nav">
                    <li><a href="/User/account_edit/@User.FindFirst(System.Security.Claims.ClaimTypes.Sid).Value" class="menu-link menu-link_us-s  menu-link_active">Account Details</a></li>
                    <li><a href="/User/account_orders/@User.FindFirst(System.Security.Claims.ClaimTypes.Sid).Value" class="menu-link menu-link_us-s">Orders</a></li>
                    <li><a href="/User/account_edit_address/@User.FindFirst(System.Security.Claims.ClaimTypes.Sid).Value" class="menu-link menu-link_us-s">Addresses</a></li>
                    <li><a href="/User/account_wishlist" class="menu-link menu-link_us-s ">Wishlist</a></li>
                    <li><a href="/User/LogOut" class="menu-link menu-link_us-s">Logout</a></li>
                </ul>
            </div>
            <div class="col-lg-9">
                <div class="page-content my-account__edit">
                    <div class="my-account__edit-form">
                        <form action="/User/account_edit/@Model.UserId" method="post" class="needs-validation">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating my-3">
                                        <input name="UserName" value="@Model.UserName" type="text" class="form-control" id="account_first_name" placeholder="First Name" required>
                                        <label for="account_first_name">First Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating my-3">
                                        <input name="UserSurname" value="@Model.UserSurname" type="text" class="form-control" id="account_last_name" placeholder="Last Name" required>
                                        <label for="account_last_name">Last Name</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating my-3">
                                        <input value="@Model.UserNickName" name="UserNickName" type="text" class="form-control" id="account_display_name" placeholder="Display Name" required>
                                        <label for="account_display_name">Nick Name</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating my-3">
                                        <input value="@Model.UserEmail" name="UserEmail" type="email" class="form-control" id="account_email" placeholder="Email Address" required>
                                        <label for="account_email">Email Address</label>
                                    </div>
                                </div>
                                <select class="custom-select" name="UserGender">
                                    <option value="Men">Man</option>
                                    <option value="Women">Woman</option>
                                </select>
                                <div class="pb-3"></div>

                                <select class="custom-select" name="UserCountryId">
                                    @foreach (var item in ViewBag.Countries)
                                    {
                                        <option value="@item.CountryId">@item.CountryName</option>
                                    }
                                </select>
                                <div class="col-md-12">
                                    <div class="my-3">
                                        <h5 class="text-uppercase mb-0">Password Change</h5>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating my-3">
                                        <input autocomplete="off" name="UserPassword" type="password" class="form-control" id="account_current_password" placeholder="Current password" required autocomplete="off">
                                        <label for="account_current_password">Current password</label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating my-3">
                                        <input name="NewPassword" type="password" class="form-control" id="account_current_password" placeholder="Current password" required>
                                        <label for="account_current_password">New password</label>
                                    </div>
                                </div>
                               
                               
                                <div class="col-md-12">
                                    <div class="my-3">
                                        <button class="btn btn-primary">Save Changes</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<div class="mb-5 pb-xl-5"></div>


